<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relativeMezcla"
    tools:context="com.example.migueroncallo.pasteleriafundown.PrepararMezcla">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mezclaBackgroundImage"
        android:src="@drawable/mezclafondo"
        android:scaleType="fitXY"
        android:foregroundGravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/harinaImage"
        android:src="@drawable/harina"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="58dp"
         />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mantequillarImage"
        android:src="@drawable/mantequilla"
        android:layout_below="@+id/harinaImage"
        android:layout_marginTop="58dp"
        android:layout_marginRight="40dp"

        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/huevoImage"
        android:src="@drawable/huevo"
        android:layout_below="@+id/mantequillarImage"
        android:layout_marginTop="58dp"
        android:layout_marginRight="40dp"

        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/aguaImage"
        android:src="@drawable/agua"
        android:layout_below="@+id/huevoImage"
        android:layout_marginTop="58dp"
        android:layout_marginRight="40dp"

        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tazonImage"
        android:src="@drawable/tazon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
